  <PropertyGroup Condition="'$(Configuration)'=='Debug'">
    <Version>$([System.DateTime]::Now.ToString('1.yy.M.dHH'))-beta-$([System.DateTime]::Now.ToString('mmss'))$([System.Guid]::NewGuid.ToString().Replace("-", "").Substring(0, 5))</Version>
